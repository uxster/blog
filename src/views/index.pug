doctype html
html
	head 
		link(rel='stylesheet', href='/css/main.css', type='text/css')
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		script(src='/js/main.js')
	body.indigo.lighten-5
		header
			.navbar-fixed
				nav
						.nav-wrapper
							a.brand-logo.center(href="/") Bloggings
		
		.row.center
			if user
				a.btn(href="/users/" + user.username) VIEW PROFILE
				a.btn(href="#") WRITE A POST
				a.btn(href="/logout") LOG OUT
			else
				
				.container.red.darken-4.col.s6.offset-s3
					p.white-text LOG IN
					form(action='/login', method='POST', autocomplete='off')
						.row
							.input-field.col.s8
								i.material-icons.prefix.white-text mail_outline
								input#icon_prefix(type="email" name="email")
								label.white-text(for="icon_prefix") Email
						.row
							.input-field.col.s8
								i.material-icons.prefix.white-text lock_outline
								input#icon_prefix(type="password" name="password")
								label.white-text(for="icon_prefix") Password
						.row
							button.btn.waves-effect.waves-light(type="submit" name="submit") LOGIN
						.row
							p.white-text Don't have an account yet? 
						.row
							a.btn.waves-effect.waves-light(href="/register") REGISTER
						.row
							p#errormessage #{message}

		footer.page-footer
			.container
				.row
					.col.l6.s12
						h5.white-text Footer Content
						p.grey-text.text-lighten-4 You can use rows and columns here to organize your footer content.
			.footer-copyright
				.container
					p Â© 2014 Copyright Text
				a.grey-text.text-lighten-4.right(href="#!") More Links
		script(type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js")
